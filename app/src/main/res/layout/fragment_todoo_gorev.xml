<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="12dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="15dp"
    android:id="@+id/todoo_gorev"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/todoo_checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#C36C00"
            tools:ignore="MissingConstraints"
            >

        </androidx.appcompat.widget.AppCompatCheckBox>

        <TextView
            android:id="@+id/todoo_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:fontFamily="@font/montserratmedium"
            android:text="Deneme"
            app:layout_constraintStart_toEndOf="@+id/todoo_checkbox2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp">

        </TextView>

        <TextView
            android:id="@+id/todoo_viewtext"
            android:layout_width="wrap_content"
            android:fontFamily="@font/montserratmedium"

            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="end|right"
            android:text="23.01.2004"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/todoo_checkbox">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>