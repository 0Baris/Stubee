<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="225dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/todoo_cardview"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="#C26C00"
        app:cardCornerRadius="5dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/todoo_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:hint="Yapılacak işi buraya yazın..."
            tools:ignore="MissingConstraints"
            >
        </EditText>

        <TextView
            android:id="@+id/todoo_textview"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="44dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            android:text="Ne kadar önemli?"
            android:textSize="30sp"
            style="@style/TextAppearance.AppCompat.Headline"
            >
        </TextView>

        <RadioGroup
            android:id="@+id/todoo_radio"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="92dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/dairebutton1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="false"
                android:text="Cok"
                android:textColor="#FF0000"
                android:textStyle="bold">
            </RadioButton>

            <RadioButton
                android:id="@+id/dairebutton2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="false"
                android:text="Yani"
                android:textColor="#FB8C01"
                android:textStyle="bold">
            </RadioButton>

            <RadioButton
                android:id="@+id/dairebutton3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="false"
                android:text="Değil"
                android:textColor="#0DC810"
                android:textStyle="bold">
            </RadioButton>


        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/todoo_kaydetbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginStart="80dp"
            android:layout_marginTop="68dp"
            android:background="#C36C00"
            android:text="@string/kaydet"
            android:textColor="@color/white"
            tools:ignore="HardcodedText">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/todoo_kapatbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:text="@string/kapat"
            android:textColor="@color/white"
            android:background="#C36C00"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="68dp"
            tools:ignore="HardcodedText">

        </androidx.appcompat.widget.AppCompatButton>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>